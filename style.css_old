#root {
    width: 80vw;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: aquamarine;
}
.timer {
    background-color: rgb(223, 188, 255);
    padding: 10px;
    margin: 6px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.timer__timeText {
    font-size: 2rem;
}
.button {
    background-color: chartreuse;
    border: none;
    padding: 4px 15px;
    cursor: pointer;
}